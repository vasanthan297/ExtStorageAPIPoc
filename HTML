const vulnerabilitySections = vulnerabilities.map(vulnerability => {
    // Define the condition you want to check
    const condition = vulnerability.severity === 'High'; // Change this condition as needed

    // Use a conditional statement to generate the section based on the condition
    if (condition) {
        return `
            <div class="section">
                <h2>${vulnerability.tool}</h2>
                <div class="vulnerability severity-${vulnerability.severity.toLowerCase()}">
                    <h3>${vulnerability.severity} Severity Vulnerability</h3>
                </div>
            </div>
        `;
    } else {
        // Return an empty string if the condition is not met
        return '';
    }
}).join('');






<!-- template.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Generate Div Example</title>
  </head>
  <body>
    <div id="myDiv">
      <% if (condition) { %>
        <p>This is a dynamically generated div.</p>
      <% } else { %>
        <p>Another message when the condition is false.</p>
      <% } %>
    </div>
  </body>
</html>





const fs = require('fs');

// Set your condition
const condition = true; // Change this condition as needed

// Create a function to generate the content based on the condition
function generateContent() {
    if (condition) {
        return '<p>This content is displayed when the condition is true.</p>';
    } else {
        return '<p>This content is displayed when the condition is false.</p>';
    }
}

// Generate the HTML content with the dynamically generated div
const htmlContent = `
<!DOCTYPE html>
<html>
<head>
    <title>Dynamic HTML with Node.js</title>
</head>
<body>
    <h1>Generated HTML File</h1>
    <div id="dynamicDiv">
        ${generateContent()}
    </div>
</body>
</html>
`;

// Specify the file path and name for the HTML file
const filePath = 'generated.html';

// Write the HTML content to the file
fs.writeFile(filePath, htmlContent, (err) => {
    if (err) {
        console.error('Error creating HTML file:', err);
    } else {
        console.log(`HTML file "${filePath}" created successfully.`);
    }
});
